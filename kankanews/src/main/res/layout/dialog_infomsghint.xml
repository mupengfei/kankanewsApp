<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_info_mas"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dip" >

            <com.kankanews.ui.view.TfTextView
                android:id="@+id/dialog_info_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="5dip"
                android:text="您确定要清除缓存"
                android:textColor="#000000"
                android:textSize="20dp" />

            <com.kankanews.ui.view.TfTextView
                android:id="@+id/dialog_info_content_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialog_info_content"
                android:layout_centerInParent="true"
                android:gravity="center|top"
                android:text="是否清除当前清除缓存"
                android:textColor="#000000"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dip"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/dialog_info_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#007aff"
                android:textSize="18dp"
                android:gravity="center"
                android:text="取消" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#D9D9D9" />

            <Button
                android:id="@+id/dialog_info_OK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                 android:textColor="#007aff"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>