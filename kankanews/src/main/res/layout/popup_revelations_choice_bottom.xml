<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/choice_back_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_alpha_black" />

    <View
        android:id="@+id/blank_view"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/cancel_but"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_above="@+id/blank_view"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/popup_cancel_button_shap_white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/red"
        android:textSize="20dip" />

    <View
        android:id="@+id/blank_view2"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:layout_above="@+id/cancel_but" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/blank_view2"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/popup_cancel_button_shap_white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_above="@+id/blank_view"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="请根据您要上传的内容选择报料形式,您的报料或提供的有价值线索,将会由上海电视台的记者尽快处理。请描述清除您的事件,有图为佳"
            android:textColor="@color/mid_gray"
            android:textSize="10dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separation_line_height"
            android:background="@color/gray_cc" />

        <TextView
            android:id="@+id/go_video_revelations"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_above="@+id/blank_view"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="视频报料"
            android:textColor="@color/red"
            android:textSize="20dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separation_line_height"
            android:background="@color/gray_cc" />

        <TextView
            android:id="@+id/go_photo_revelations"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_above="@+id/blank_view"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="照片报料"
            android:textColor="@color/red"
            android:textSize="20dip" />
    </LinearLayout>

</RelativeLayout>