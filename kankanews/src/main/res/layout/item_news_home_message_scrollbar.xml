<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_no_alpha"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:padding="@dimen/margin_base_space" >

        <ImageView
            android:id="@+id/news_home_message_scrollbar_icon"
            android:layout_width="17.2dip"
            android:layout_height="35dip"
            android:scaleType="fitXY" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_base_space"
            android:layout_marginStart="@dimen/margin_base_space"
            android:background="@color/gray_cc" />

        <com.kankanews.ui.view.autoscrollview.VerticalViewPager
            android:id="@+id/news_home_message_scrollbar_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.kankanews.ui.view.autoscrollview.VerticalViewPager>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/gray_cc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/bright_gray" />

</LinearLayout>