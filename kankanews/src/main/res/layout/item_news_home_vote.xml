<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_no_alpha"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/gray_cc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip" >

        <ImageView
            android:id="@+id/item_news_home_vote_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_base_space"
            android:scaleType="fitXY" />

        <com.kankanews.ui.view.TfTextView
            android:id="@+id/item_news_home_vote_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_news_home_vote_icon"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="17dip"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/item_news_home_vote_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <com.kankanews.ui.view.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="换一组"
                android:textColor="@color/a_3_gray"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_news_home_vote_change_icon"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_margin="@dimen/margin_base_space"
                android:scaleType="fitXY"
                android:src="@drawable/ic_change" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/gray_cc" />

    <com.kankanews.ui.view.TfTextView
        android:id="@+id/item_news_home_vote_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_base_space"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4.5dp"
        android:textColor="@color/black"
        android:textSize="17dip"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/item_news_home_vote_options_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_base_space"
        android:orientation="vertical" >
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/gray_cc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/bright_gray" />

</LinearLayout>