<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_no_alpha"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/gray_cc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip" >

        <ImageView
            android:id="@+id/item_news_home_matrix_icon"
            android:layout_width="21dip"
            android:layout_height="19dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_base_space"
            android:layout_marginRight="@dimen/margin_base_space"
            android:scaleType="fitCenter" />

        <com.kankanews.ui.view.TfTextView
            android:id="@+id/item_news_home_matrix_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_news_home_matrix_icon"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="17dip"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/item_news_home_matrix_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <com.kankanews.ui.view.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="进去看看"
                android:textColor="@color/a_3_gray"
                android:textSize="16dip"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_margin="@dimen/margin_base_space"
                android:scaleType="fitXY"
                android:src="@drawable/ic_go_look" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_base_space"
        android:layout_marginLeft="@dimen/margin_base_space"
        android:layout_marginRight="@dimen/margin_base_space"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/item_news_home_matrix_0"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_base_space"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/item_news_home_matrix_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_display" />

                <ImageView
                    android:id="@+id/item_news_home_matrix_item_icon"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="7.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_video" />
            </RelativeLayout>

            <com.kankanews.ui.view.TfTextView
                android:id="@+id/item_news_home_matrix_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_base_space"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4.5dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_news_home_matrix_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@id/item_news_home_matrix_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_display" />

                <ImageView
                    android:id="@id/item_news_home_matrix_item_icon"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="7.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_video" />
            </RelativeLayout>

            <com.kankanews.ui.view.TfTextView
                android:id="@id/item_news_home_matrix_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_base_space"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4.5dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_base_space"
        android:layout_marginLeft="@dimen/margin_base_space"
        android:layout_marginRight="@dimen/margin_base_space"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/item_news_home_matrix_2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_base_space"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@id/item_news_home_matrix_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_display" />

                <ImageView
                    android:id="@id/item_news_home_matrix_item_icon"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="7.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_video" />
            </RelativeLayout>

            <com.kankanews.ui.view.TfTextView
                android:id="@id/item_news_home_matrix_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_base_space"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4.5dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_news_home_matrix_3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@id/item_news_home_matrix_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_display" />

                <ImageView
                    android:id="@id/item_news_home_matrix_item_icon"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="7.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_video" />
            </RelativeLayout>

            <com.kankanews.ui.view.TfTextView
                android:id="@id/item_news_home_matrix_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_base_space"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4.5dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_news_home_matrix_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_item_news_home_change"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.kankanews.ui.view.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_base_space"
                android:text="换一组看看"
                android:textColor="@color/mid_gray"
                android:textSize="16dip" />

            <ImageView
                android:id="@+id/item_news_home_matrix_change_icon"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/ic_change" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separation_line_height"
        android:background="@color/gray_cc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@color/bright_gray" />

</LinearLayout>