<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.kankanews.ui.view.TfTextView
        android:id="@+id/vote_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_base_space"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/margin_base_space" >

        <View
            android:id="@+id/vote_answer_loading"
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_item_news_home_vote_answer_loading" />

        <com.kankanews.ui.view.TfTextView
            android:id="@+id/vote_answer_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_base_space"
            android:layout_toRightOf="@+id/vote_answer_loading"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>