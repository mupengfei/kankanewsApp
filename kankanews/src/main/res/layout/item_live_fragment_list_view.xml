<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_no_alpha"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_base_space">

        <ImageView
            android:id="@+id/live_live_list_titlepic"
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/live_live_list_livetype"
            android:layout_width="40dip"
            android:layout_height="20dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_base_space"
        android:layout_marginRight="@dimen/margin_base_space"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.kankanews.ui.view.TfTextView
            android:id="@+id/live_live_list_livetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:ellipsize="end"
            android:lineSpacingExtra="4.5dp"
            android:maxLines="2"
            android:minLines="1"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/live_live_list_intro_but"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_marginBottom="@dimen/margin_base_space"
        android:layout_marginLeft="@dimen/margin_base_space"
        android:layout_marginRight="@dimen/margin_base_space"
        android:layout_marginTop="11dip"
        android:gravity="center|start">

        <ImageView
            android:id="@+id/live_live_list_livetimeicon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentLeft="true"
            android:padding="2dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_time" />

        <com.kankanews.ui.view.TfTextView
            android:id="@+id/live_live_list_livetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/live_live_list_livetimeicon"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/mid_gray"
            android:textSize="12dip" />

        <com.kankan.kankanews.ui.view.MyTextView
            android:id="@+id/live_live_list_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@+id/live_live_list_livetime"
            android:gravity="center"
            android:singleLine="true"
            android:text="详细"
            android:textSize="12dip" />

        <ImageView
            android:id="@+id/live_live_list_arrowshow"
            android:layout_width="12dip"
            android:layout_height="18dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/live_live_list_detail"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/live_live_list_keyboard_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/live_live_list_yuyue"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_yuyue"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <com.kankanews.ui.view.TfTextView
        android:id="@+id/live_live_list_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_base_space"
        android:lineSpacingExtra="3.5dp"
        android:paddingLeft="@dimen/margin_base_space"
        android:paddingRight="@dimen/margin_base_space"
        android:textColor="@color/mid_gray"
        android:textSize="12dip" />

    <View
        android:id="@+id/live_live_list_separation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_base_space"
        android:background="@color/bright_gray"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/live_live_list_separation_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_base_space"
        android:paddingRight="@dimen/margin_base_space">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separation_line_height"
            android:layout_marginLeft="@dimen/margin_base_space"
            android:layout_marginRight="@dimen/margin_base_space"
            android:background="@color/bright_gray" />
    </RelativeLayout>

</LinearLayout>