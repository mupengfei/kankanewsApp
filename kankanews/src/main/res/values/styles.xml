<resources>

    <style name="Kankan_base_Theme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="Kankan_Theme_Day" parent="Kankan_base_Theme">
        <item name="appBackground">@color/bright_gray</item>
    </style>

    <style name="Kankan_Theme_Day_Alpha" parent="Kankan_base_Theme">
        <item name="appBackground">@color/bright_gray</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Kankan_Theme_Night" parent="Kankan_base_Theme">
        <item name="appBackground">@color/dark_gray</item>
    </style>

    <style name="ActionBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/deeper_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
    </style>

    <style name="TitleBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/deeper_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <!-- 自定义dialog样式 -->
    <style name="MyDialog1" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/pic_selected_slide_in</item>
        <item name="android:windowExitAnimation">@anim/pic_selected_slide_out</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/share_borad_show</item>
        <item name="android:windowExitAnimation">@anim/share_borad_hide</item>
    </style>

</resources>
